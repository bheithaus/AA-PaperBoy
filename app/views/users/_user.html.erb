<h2 class='pull-left'><%= user.name %></h2>
<table class='table table-hover'>
  <thead>
    <tr>
      <th><%= button_to 'Edit', edit_user_path(user),
              class: 'btn btn-primary btn-mini', method: :get %>
      </th>
      <th>Newspaper Title</th>
      <th>Price</th>
      <th>Delivery Schedule</th>
    </tr>
  </thead>
  <tbody>
    <% user.subscriptions.each do |sub| %>
      <% plan = sub.subscription_plan %>
      <tr>
        <td>
          <%= link_to subscription_path(sub.id), method: :delete do %>
            <i class="icon-remove"></i>
          <% end %>
        </td>
        <td><%= plan.newspaper.title %></td>

        <%= render partial: 'shared/plan', object: plan %>
      </tr>
    <% end %>
  </tbody>
</table>